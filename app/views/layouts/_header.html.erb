  <link rel="stylesheet" type="text/css" href="application.css">
  <link rel="icon" type="images/png" href="maxresdefault.png">

</head>

  <header>
  
<div class="top">

      <a class="logo" href=home>
        <span class="icon-coffee"></span>
        <span class="coffee">Shrug</span>
      </a>

      <nav class="top-nav">
        <ul class="top-ul">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About Us", aboutpage_path %></li>
