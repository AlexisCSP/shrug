<% provide(:title, "Edit user") %>

<div style= " background-image: url(<%= image_path(current_user.image) %>);">
<div class= "jumbotron" style= " width:60%; margin-left: 22%; margin-top:-10px; opacity: 0.9;">
<h2 style = "padding-left: 36%;">Update your profile</h2>
<br/>
<div class="row">
  <div class="col-md-6 col-md-offset-3">



    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' , obj: @user%>

      <%= f.label :image %><br>
      <%= f.file_field :image %>
      <% if f.object.image? %>
        <%= image_tag f.object.image.thumb.url %>
        <%= f.label :remove_image %>
        <%= f.check_box :remove_image %>
      <% end %> <br/> <br/>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

</div>
</div>
</div>
</div>